{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ Aktive Datei kompilieren",
            "command": "/usr/local/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Vom Debugger generierte Aufgabe."
        },
        {
            "label": "build",
            "type": "shell",
            "command": "sh ${workspaceFolder}/mk.sh",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "build+start",
            "type": "shell",
            "command": "sh ${workspaceFolder}/combine_mk_and_run.sh",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "testTask",
            "type": "shell",
            // "command": "${input:runOpen}",
            // "command": "${input:runSendSequence}",
            // "command": "${input:runQuickOpen}",
            "command": "workbench.action.quickOpen",
            // "command": "runCommands",
            // "args": {
            //     "commands": [
            //         {
            //             "command": "workbench.action.terminal.sendSequence",
            //             "args": {
            //                 "text": "bla"
            //             }
            //         }
            //     ]
            // }
            "problemMatcher": [],
        }
    ],
    "inputs": [
        {
            "id": "fileToOpen",
            "type": "promptString",
            "description": "Name of the state to create"
        },
        {
            "id": "runOpen",
            "type": "command",
            "command": "vscode.open",
            "args": {
                "uri": "/home/peter/my_projects/individual-gits/pr-desktop-tools/src/pr-newsletter/incVersions.cxx"
            }
        },
        {
            "id": "runQuickOpen",
            "type": "command",
            "command": "workbench.action.quickOpen",
            "args": "${input:fileToOpen}"
        },
        {
            "id": "runSendSequence",
            "type": "command",
            "command": "runCommands",
            "args": {
                "commands": [
                    {
                        "command": "workbench.action.quickOpen",
                        "args": "${input:fileToOpen}"
                    }
                ]
            }
        },
    ],
    "version": "2.0.0"
}